rules_version = "2";
service firebase.storage {
  match /b/{bucket}/o {
    match /childPhotos/{userId}/{childId}/{allPaths=**} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == "admin" || request.auth.token.role == "school" || request.auth.token.role == "authority");
      allow write: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == "admin");
      allow delete: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == "admin");
    }
    
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == userId || request.auth.token.role == "admin");
    }
    
    match /alerts/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
